<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI This Week</title>
    <!--[if mso]>
    <style type="text/css">
        table { border-collapse: collapse; }
        td, th { font-family: Arial, sans-serif; }
    </style>
    <![endif]-->
</head>
<body style="margin: 0; padding: 24px; background-color: #f8fafc; font-family: Arial, Helvetica, sans-serif; color: #0f172a; line-height: 1.5; -webkit-text-size-adjust: 100%;">

    <!-- Outer wrapper table for Outlook compatibility -->
    <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="max-width: 800px; margin: 0 auto;">
        <tr>
            <td style="padding: 0;">

                <!-- Header -->
                <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="margin-bottom: 16px;">
                    <tr>
                        <td style="font-family: Arial, Helvetica, sans-serif; padding: 0;">
                            <h1 style="color: #0a3d91; margin: 0 0 4px 0; font-size: 28px; font-weight: 700;">&#127809; AI This Week</h1>
                            <p style="margin: 0; font-size: 14px; color: #475569;"><strong>Date:</strong> {{ run_date }}</p>
                        </td>
                    </tr>
                </table>

                {% for section_key, items in sections.items() %}
                {% if items %}
                <!-- Section: {{ section_labels.get(section_key, section_key) }} -->
                <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="background-color: #ffffff; border: 1px solid #e2e8f0; border-radius: 6px; margin-bottom: 16px;">
                    <tr>
                        <td style="padding: 16px 16px 8px 16px; font-family: Arial, Helvetica, sans-serif;">
                            <h2 style="color: #0a3d91; border-bottom: 2px solid #0a3d91; padding-bottom: 6px; margin: 0 0 12px 0; font-size: 20px; font-weight: 700;">{{ section_labels.get(section_key, section_key|replace("_"," ")|title) }}</h2>
                        </td>
                    </tr>
                    {% for item in items %}
                    <tr>
                        <td style="padding: 4px 16px 12px 16px; font-family: Arial, Helvetica, sans-serif;">
                            <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%">
                                <tr>
                                    <td width="32%" style="vertical-align: top; padding: 6px 12px 6px 0; font-family: Arial, Helvetica, sans-serif;">
                                        <span style="color: #0a3d91; margin-right: 6px; font-size: 16px;">&#8226;</span><span style="font-weight: 700; color: #0f172a;">{{ item.Headline }}</span>
                                        {% if item.Date %}<span style="color: #64748b; font-size: 12px; margin-left: 6px;">&middot; {{ item.Date }}</span>{% endif %}
                                    </td>
                                    <td width="68%" style="vertical-align: top; padding: 6px 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: #334155;">
                                        {{ item.Summary_Text }}<br>
                                        <a href="{{ item.Live_Link }}" target="_blank" rel="noopener noreferrer" style="color: #0a3d91; text-decoration: none; font-weight: 600;">Read more</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
                {% endif %}
                {% endfor %}

                <!-- Footer -->
                <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td style="padding: 8px 0; font-family: Arial, Helvetica, sans-serif; color: #475569; font-size: 12px;">
                            AI This Week &mdash; automated newsletter pipeline.
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
    </table>

</body>
</html>
